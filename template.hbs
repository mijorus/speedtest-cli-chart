<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Speedtest History</title>
</head>
<body>
    <div style="display: flex; justify-content:center">
        <div style="width: 1000px; height: auto;">
            <canvas id="myChart" width="1000px"></canvas>
        </div>
        <div style="width: 1000px; height: auto; margin-top: 30px;">
            <canvas id="serversChart" width="1000px"></canvas>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.3.2/dist/chart.min.js" defer></script>
    <script>
        window.onload = function() {
            var myChart = new Chart(document.querySelector('#myChart'), {
                type: 'line',
                data: {
                    labels: {{ labels }},
                    datasets: [
                        {
                            label: 'Download',
                            data: {{ downloads }},
                            borderWidth: 1,
                            backgroundColor: [
                                'rgba(54, 162, 235, 1)',
                            ],
                            borderColor: [
                                'rgba(54, 162, 235, 0.4)',
                            ],
                            borderWidth: 3,
                            tension: 0.2
                        },
                        {
                            label: 'Upload',
                            data: {{ uploads }},
                            borderWidth: 1,
                            backgroundColor: [
                                'rgba(255, 99, 132, 1)',
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 0.4)',
                            ],
                            borderWidth: 3,
                            tension: 0.2
                        },
                        {
                            label: 'Ping',
                            data: {{ pings }},
                            borderWidth: 1,
                            backgroundColor: [
                                'rgba(245, 224, 66, 1)',
                            ],
                            borderColor: [
                                'rgba(245, 224, 66, 0.4)',
                            ],
                            borderWidth: 3,
                            tension: 0.2
                        },
                    ]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            var myChart = new Chart(document.querySelector('#myChart'), {
                type: 'bar',
                data: {
                    labels: {{ servers }},
                    datasets: [
                        {
                            label: 'Download',
                            data: {{ downloads }},
                            borderWidth: 1,
                            backgroundColor: [
                                'rgba(54, 162, 235, 1)',
                            ],
                            borderColor: [
                                'rgba(54, 162, 235, 0.4)',
                            ],
                            borderWidth: 3,
                            tension: 0.2
                        }
                    ]
                    {{ servers }}
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }
    </script>
</body>
</html>